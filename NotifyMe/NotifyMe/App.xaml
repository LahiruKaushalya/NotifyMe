<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotifyMe.App"
             xmlns:ViewModels="clr-namespace:NotifyMe.ViewModels">
    
	<Application.Resources>
        <ResourceDictionary>
            <ViewModels:ViewModelLocator x:Key="ViewModelLocator"/>
            
            <!--Styles -->
            <Color x:Key="BaseColor">#03A9F4</Color>
            

            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="20" ></Setter>
                <Setter Property="BackgroundColor" Value="{StaticResource BaseColor}" ></Setter>
                <Setter Property="TextColor" Value="#FFFFFF" ></Setter>
                <Setter Property="FontSize" Value="Medium" ></Setter>
                <Setter Property="FontAttributes" Value="Bold" ></Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>